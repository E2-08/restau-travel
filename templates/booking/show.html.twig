{% extends 'base.html.twig' %}
{% block title %}Reservation n°{{booking.id}}
{% endblock %}
{% block body %}
    {% set restau = booking.restaurant %}

    {% if app.request.query.get('withAlert') %}
        <div class="container mt-2">
            <div class="alert alert-success">
                <h4 class="alert-heading">Barvo !</h4>
                <p>Votre réservation à bien été prise en compte</p>
            </div>
        </div>
    {% endif %}
    <div class="container d-flex flex-column justify-content-between">

        <div class="recapRestaurant" style="width: 100%">
            <div class="card  d-center" style="width: 35%">
                <h3 class="card-header">Réservation n° :
                    {{booking.id}}</h3>
                <div class="card-body">
                    <h5 class="card-title">Récapitulatif de votre réservation</h5>
                    <hr>
                    <h6 class="card-subtitle text-muted">
                        <p class="card-text mb-2">Date de la reservation
                            <i class="far fa-calendar-alt"></i>
                            {{booking.startDate | date('d/m/Y')}}
                        </p>

                    </h6>
                    <h6>
                        <p class="card-text mb-2">Heure de la reservation
                            <i class="far fa-clock"></i>
                            {{booking.startHour}}
                        </p>

                    </h6>
                    <h6>
                        <p class="card-text">Nombre de personne
                            <i class="fas fa-users"></i>
                            {{booking.numberOfPeople}}
                        </p>
                    </h6>

                    <div class="dropdown-divider"></div>
                    <img class="mt-3" style="height: 200px; width: 100%; display: block;" src="{{restau.coverimages}}" alt="Card image">

                    <p class="card-text mt-2">
                        <strong>{{restau.name}}</strong>
                    </p>
                    <p class="card-text">{{restau.adress}}
                    </p>
                    <div class="dropdown-divider"></div>
                    <div class="alert alerd-light">
                        {# {% if date() > booking.startDate %} #}
                        <h2 class="alert-heading">Votre avis compte</h2>
                        {% set comment = booking.restaurant.getCommentAuthor(app.user) %}
                        {% if comment is not null %}
                            <blockquote>
                                {{comment.content}}
                            </blockquote>
                            <strong>Note :
                            </strong>
                            {% include 'partials/rating.html.twig' with {

                                'rating' : comment.rating
                            }
 %}
                        {% else %}
                            {{ form_start(form)}}
                            {{ form_widget(form)}}
                            <button type="submit" class="btn btn-success">Confirmer</button>
                            {{ form_end(form)}}
                        {% endif %}
                        {# {% endif %} #}
                    </div>
                    <div style="width: 100%;">
                        <a href="{{path('restaurant_show', {'slug': restau.slug})}}" class="btn btn-success mt-3 btn-recapBooking">OK</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}