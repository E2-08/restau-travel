{% extends '/admin/base.html.twig' %}

{% block title %}Nos magnifiques annonces{% endblock %}
{% block body %}
    <div class="Rtwrapper">
        <div class="container">
            <div class="ad-rest-stat justify-content-between">
                <div class="col">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card border-primary flex-md-row mb-4 shadow-sm h-md-250">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-primary">
                                        <h3>Total Réservation</h3>
                                    </strong>

                                    <i class="fas fa-folder fa-3x pl-5">
                                        <span class="pl-3">{{bookingCount}}
                                        </span>
                                    </i>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-success flex-md-row mb-4 shadow-sm h-md-250">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-success">
                                        <h3>Note moyenne</h3>
                                    </strong>
                                    <i class="fas fa-star fa-3x pl-5">
                                        <span class="pl-3">
                                            {{rating}}
                                        </span>
                                    </i>

                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-success flex-md-row mb-4 shadow-sm h-md-250">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-success">
                                        <h3>Total des avis</h3>

                                    </strong>
                                    <i class="fas fa-comments fa-3x pl-5">
                                        <span class="pl-3">
                                            {{commentCount}}
                                        </span>
                                    </i>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card border-success flex-md-row mb-4 shadow-sm h-md-250">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-success">Réseravtion du jour</strong>
                                    <table class="table table-striped  table-list table-responsive-sm able-responsive-md">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Id</th>
                                                <th class="text-center">Client</th>
                                                <th class="text-center">Téléphone</th>
                                                <th class="text-center">Date</th>
                                                <th class="text-center">Heure</th>
                                                <th class="text-center">Nombre</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            {% for booking in bookings %}
                                                <tr>
                                                    <td class="text-center">{{booking.id}}</td>
                                                    <td class="text-center">{{booking.booker.fullName}}</td>
                                                    <td class="text-center">{{booking.booker.phone}}</td>
                                                    <td class="text-center">{{booking.startDate}}</td>
                                                    <td class="text-center">{{booking.startHour}}</td>
                                                    <td class="text-center">{{booking.numberOfPeople}}</td>
                                                </tr>
                                            {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-success flex-md-row mb-4 shadow-sm h-md-250">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-success">Les avis des clients</strong>

                                    {% for comment in comments %}
                                        <div class="card-header mb-2">
                                            <div class="bg-ligth w100 text-justify">
                                                {{comment.content}}
                                            </div>
                                            <div class="">{% include 'partials/rating.html.twig' with {
                                                    'rating' : comment.rating
                                                } %}
                                                <h6>{{comment.author.fullName}}</h6>
                                            </div>
                                        </div>

                                    {% endfor %}

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}